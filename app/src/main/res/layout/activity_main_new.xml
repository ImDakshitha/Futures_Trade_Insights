<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/main_user_icon"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/profile">
        </ImageView>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/main_user_icon"
            android:id="@+id/tv_sign_up"
            android:layout_width="50dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:text="Hi"
            android:textSize="40sp" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/tv_sign_up"
            android:id="@+id/tv_fname"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:text="dlakmina5@gmail.com"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/btn_logout_new"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="log out"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"/>

    </LinearLayout>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigator"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu"></com.google.android.material.bottomnavigation.BottomNavigationView>



</androidx.constraintlayout.widget.ConstraintLayout>